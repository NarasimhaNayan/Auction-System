              >
            </button> -->
        </div>

        <section class="table-container-bid">
            <h2>All bids</h2>
            <ul class="responsive-table">
                <li class="table-header">
                    <div class="col col-1">Email</div>
                    <div class="col col-2">Bid</div>
                    <div class="col col-3">Bid Note</div>
                </li>
                <%if(!singleRes) {%>
                    <% singleRes.bidDetails.forEach(function(BID) { %>
                        <li class="table-row">
                            <div class="col col-1" data-label="Email">
                                <%= BID.email %>
                            </div>
                            <div class="col col-2" data-label="Bid">
                                <%= BID.bid %>$</div>
                            <div class="col col-3" data-label="Bid Note">
                                <%= BID.bidnote %>
                            </div>
                        </li>

                        <% }); %>
                            <%} else { %>
                                <h1>
                                    <%= ok %>
                                </h1>

                                <% } %>

            </ul>
        </section>


        <!-- ----------------------- bid form -------------------- -->
        <section class="user">
            <header class="user__header">
                <img alt="svgImg" src="data:image/svg+xml;base64,"
                />
                <h1 class="user__tittle">Add your bid</h1>
            </header>
            <form action="/products/bidAdded/<%=singleRes._id%>" method="POST" class="form">
                <div class="form__group">
                    <input type="email" class="form__input" placeholder="Email" name="email" required="required" />
                </div>
                <div class="form__group">
                    <input type="number" class="form__input" placeholder="Bid" name="bid" required="required" />
