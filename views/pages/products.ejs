                <div class="form__group">
                    <input type="text" class="form__input" placeholder="Bid Note" name="bidnote" required="required" />
                </div>
                <button class="form__button" type="submit">Place Bid</button>
            </form>
        </section>








        <!-- ----------------------- comment form -------------------- -->

        <section class="user">
            <header class="user__header">
                <img src="data:image/png;base64,"
                />
                <h1 class="user__tittle">leave your comments</h1>
            </header>
            <form action="/products/commentsAdded/<%=singleRes._id%>" method="POST" class="form">
                <div class="form__group">
                    <input type="text" class="form__input" placeholder="Name" name="UserName" aria-label="Username" aria-describedby="basic-addon1" required="required" />
                </div>
                <div class="form__group">
                    <textarea name="Comments" class="form__input" id="" cols="200%" rows="2" placeholder="Your Comments!" required="required"></textarea>
                </div>
                <button class="form__button" type="submit">Add comments</button>
            </form>
        </section>





        <section class="table-container-comment">
            <h2>All Comments</h2>
            <ul class="responsive-table">
                <li class="table-header">
                    <div class="col col-5">Name</div>
                    <div class="col col-6">Comment</div>
                </li>
                <%if(singleRes.comments) { %>
                    <%
                  singleRes.comments.forEach(function(c) { %>
                        <li class="table-row">
                            <div class="col col-5" data-label="Email">
                                <%= c.UserName %>
                            </div>
                            <div class="col col-6" data-label="comment">
                                <%=c.Comments%>
                            </div>
                        </li>
                        <% }); %>
                            <%} else {%>
                                <h2>No Comments</h2>
                                <% } %>
            </ul>
        </section>


    </div>
